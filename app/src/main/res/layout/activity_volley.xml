<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_volley_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="volley_string"
            android:textAllCaps="false"
            android:onClick="stone"
            />
        <Button
            android:id="@+id/btn_volley_string_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="volley_string_post"
            android:textAllCaps="false"
            android:onClick="stone"
            />
        <Button
            android:id="@+id/btn_volley_json"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="volley_json"
            android:textAllCaps="false"
            android:onClick="stone"
            />
        <Button
            android:id="@+id/btn_volley_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="volley_custom"
            android:textAllCaps="false"
            android:onClick="stone"
            />

        <TextView
            android:id="@+id/tv_volley_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>